<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/
                           spring-beans-4.3.xsd" >
    
    <!-- Spring Security -->
    <bean class="com.tentacruel.dahood.seguridad.ConfiguracionDeSeguridad" />
    <!-- Se especifica la ruta del archivo que tendra los datos de la conexión 
    a la BD, en este caso el archivo se llama database.properties y se encuentra 
    dentro de la carpeta WEB-INF -->
    <bean class="org.springframework.beans.factory.config
                                                .PropertyPlaceholderConfigurer"
        p:location="/WEB-INF/database.properties"/>

    <!--  Bean que realiza la conexión a la BD usando la informacion de 
          database.properties-->
    <bean id="dataSource" class="org.springframework.jdbc
        .datasource.DriverManagerDataSource"
        p:driverClassName="${jdbc.driverClassName}"
        p:url="${jdbc.url}"
        p:username="${jdbc.username}"
        p:password="${jdbc.password}"/>
     
   <bean id="hibernate4AnnotatedSessionFactory"
          class="org.springframework.orm.hibernate4.LocalSessionFactoryBean">
        <property name="dataSource" ref="dataSource"/>
        <property name="annotatedClasses">
            <list>
                <value>com.tentacruel.dahood.mapeobd.Gusto</value>
                <value>com.tentacruel.dahood.mapeobd.Usuario</value>
            </list>
        </property>
        <property name="hibernateProperties">
            <props>
                <prop key="hibernate.dialect">org.hibernate.dialect.
                    PostgreSQLDialect
                </prop>
                <prop key="hibernate.show_sql">true</prop>
                <prop key="hibernate.format_sql">false</prop>
            </props>
        </property>
    </bean>
    
    <!--  Se crea beans para que sean inyectados en el controlador 
    con la etiqueta @Autowired. También se les inyecta un bean de 
    AnnotatedSessionFactory-->
    <bean id="GustoDAO" class="com.tentacruel.dahood.modelo.GustoDAO"
        p:sessionFactory-ref="hibernate4AnnotatedSessionFactory"/>
    <bean id="UsuarioDAO" class="com.tentacruel.dahood.modelo.UsuarioDAO"
        p:sessionFactory-ref="hibernate4AnnotatedSessionFactory"/>
</beans>
